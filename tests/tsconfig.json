{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "jsx": "preserve",
    "declaration": false,
    "noImplicitAny": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
  },
  "include": [
    "./*"
  ],
  "exclude": [
    "node_modules",
  ]
}
