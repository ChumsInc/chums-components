{
  "extends": "@tsconfig/node18",

  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
  },
  "include": [
    "*"
  ],
  "exclude": [
    "node_modules",
  ]
}
